<Page x:Class="app_gym.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_gym"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page3"
      Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <Border Grid.Column="1" Grid.Row="1" BorderThickness="7" BorderBrush="Gray"
                CornerRadius="5,5,5,5">
            
            <StackPanel Margin="10">
                <TextBlock Text="CONFIGURACION" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="de planes" FontSize="20" HorizontalAlignment="Center"/>
                <TextBlock Text="AJUSTES DE PLANES" FontSize="14"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="agg_plan" Content="agregar" Click="agg_plan_Click" />
                    <Button x:Name="mod_plan" Content="modificar" Margin="10,0,0,0" Click="mod_plan_Click"/>
                    <Button x:Name="eli_plan" Content="eliminar" Margin="10,0,0,0" Click="eli_plan_Click"/> 
                </StackPanel>
                <TextBlock Text="hola como estas"/>
            </StackPanel>
            

        </Border>


    </Grid>
</Page>
