<Page x:Class="app_gym.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_gym"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="Page3"
      Background="#CFD9E5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <Border Grid.Column="1" Grid.Row="1" BorderThickness="7" BorderBrush="#577C8E" 
                CornerRadius="5,5,5,5"
                >
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                    <GradientStop Color="#F4EFEB" Offset="0.0"/>
                    <GradientStop Color="#C7D9E5" Offset="1.0" />
                </LinearGradientBrush>

            </Border.Background>

            <StackPanel Margin="10">
                <TextBlock Text="CONFIGURACION" FontSize="20" FontWeight="Bold" Foreground="#2F4157" HorizontalAlignment="Center"/>
                <TextBlock Text="AJUSTES DE PLANES" FontSize="14" FontWeight="Medium" Foreground="#2F4157" Margin="0,5,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="agg_plan" Content="Agregar" FontSize="14" FontWeight="Medium" Foreground="#2F4157" Background="Transparent" BorderThickness="0.2"  Margin="10,0,0,5" Click="agg_plan_Click" />
                    <Button x:Name="mod_plan" Content="Modificar" FontSize="14" FontWeight="Medium" Foreground="#2F4157" Background="Transparent" Margin="10,0,0,5"  BorderThickness="0.2" Click="mod_plan_Click"/>
                    <Button x:Name="eli_plan" Content="Eliminar" FontSize="14" FontWeight="Medium" Foreground="#2F4157"  Background="Transparent" BorderThickness="0.2" Margin="10,0,0,5" Click="eli_plan_Click"/>

                </StackPanel>
                <TextBlock Text="Cerrar sesion" FontSize="20" FontWeight="DemiBold" Foreground="#2F4157" HorizontalAlignment="Center" Margin="0,10,0,0"/>


            </StackPanel>


        </Border>


    </Grid>
</Page>
