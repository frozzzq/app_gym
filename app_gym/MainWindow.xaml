<Window x:Class="app_gym.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_gym"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="500">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="BYLE" FontSize="72" FontWeight="Bold" Foreground="#FF6A5ACD" HorizontalAlignment="Center"/>
            <TextBlock Text="Balance Your Life Easily" FontSize="16" Foreground="#FF8A8A8A" Margin="0,-10,0,40" HorizontalAlignment="Center"/>
            <TextBlock Text="¡Bienvenidos!" FontSize="22" FontWeight="SemiBold" Foreground="#FF444444" HorizontalAlignment="Center"/>
            <Button Content="Comenzar" Width="150" Height="45" Background="#FF6A5ACD" Foreground="White" 
                   FontWeight="Bold" Margin="0,30,0,0" Click="start_Click"
                   Cursor="Hand" BorderThickness="0" />
        </StackPanel>
    </Grid>
</Window>
