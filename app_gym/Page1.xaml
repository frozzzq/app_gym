<Page x:Class="app_gym.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_gym"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Page1"
      Background="#F4EFEB">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="2" Grid.Row="1" BorderThickness="10,0,0,0" BorderBrush="#577C8E"
                >
            <Grid Grid.Row="1" Grid.Column="2" Background="#F4EFEB">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="13*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Grid.Column="1" 
            BorderBrush="#577C8E"
            BorderThickness="5"
            CornerRadius="10"
            Background="#C7D9E5" Grid.RowSpan="2">

                    <StackPanel>
                        <TextBlock Text="SENSOR STATUS" FontSize="15" HorizontalAlignment="Center"
                       Background="#C7D9E5" Margin="0,10,0,10" FontWeight="Bold" Foreground="#2F4157"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Estatus:" FontWeight="Bold" FontSize="15" Foreground="#2F4157" Margin="10,0,100,0"/>
                            <TextBlock x:Name="estatus_sensor"  HorizontalAlignment="Right"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">

                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="estado" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <Button x:Name="verificar_sensor" Content="VERIFICACION" Width="80" Click="verificar_sensor_Click"
                                HorizontalAlignment="Center" Background="#2F4157" Foreground="White" BorderThickness="0.75" BorderBrush="#FFE9E4E4"  Margin="0,10,0,10"/>
                        <Button x:Name="volver" Content="REGISTRO" Click="volver_Click" 
                                HorizontalAlignment="Center" Width="80" Background="#2F4157" Foreground="White" BorderThickness="0.75" BorderBrush="#FFE9E4E4"  Margin="0,10,0,10"/>
                        <TextBlock x:Name="verificar" HorizontalAlignment="Center"/>


                    </StackPanel>


                </Border>

            </Grid>

        </Border>


        <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="REGISTRO DE CLIENTE" 
                   FontSize="20" 
                   FontWeight="Bold"    
                   HorizontalAlignment="Center" 
                   Margin="0 0 0 20"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre:" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="nombre" Width="180" Margin="5" Background="Transparent" BorderThickness="0,0,0,2"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Apellidos:" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ap1" Width="180" Margin="5" Background="Transparent" BorderThickness="0,0,0,2"/>


            <TextBlock Grid.Row="4" Grid.Column="0" Text="Email:" FontWeight="Bold" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="correo" Width="180" Margin="5" Background="Transparent" BorderThickness="0,0,0,2"/>


            <Button Grid.Row="6" Grid.ColumnSpan="2"
                x:Name="registro"
                Content="Registrar"
                FontWeight="Bold"
                FontSize="17"
                Margin="0 20 0 0"
                Background="#2F4157" Foreground="White"
                BorderThickness="0.75" BorderBrush="#FFE9E4E4"    
                HorizontalAlignment="Center"
                Click="registro_Click"/>

        </Grid>
    </Grid>
</Page>
