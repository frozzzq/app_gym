<Window x:Class="app_gym.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_gym"
        mc:Ignorable="d"
        Title="Window2" Height="650" Width="1200" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Border Grid.Row="1">

            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0.7">
                    <GradientStop Color="#112250" Offset="0.0"/>
                    <GradientStop Color="#1C3A7C" Offset="1.0"/>
                </LinearGradientBrush>

            </Border.Background>


        </Border>
        
        

        
            
        <TextBlock Text="BYLE" FontSize="20"
            HorizontalAlignment="Center" Grid.Column="0"/>

        <Grid Grid.Row="1" Grid.Column="1">
            <Border BorderBrush="#E5D595" BorderThickness="10">
                <Frame x:Name="registrar_cliente" Grid.Column="1" Grid.Row="1" NavigationUIVisibility="Hidden">
                    
                </Frame>


            </Border>
        </Grid>
            
        


        <StackPanel  Orientation ="Horizontal" Grid.Row="1" >
            <StackPanel Orientation="Vertical" Grid.Column="0"  Width="150" >

                <RadioButton x:Name ="RBINICIO"   Style="{StaticResource boton_menu}"
                             Content="Inicio"/>
                
                <RadioButton x:Name ="RB1"  Checked="RadioButton_Checked" Style="{StaticResource boton_menu}"
                             Content="registrar usuario"/>
             
                <RadioButton x:Name ="RB3" Content="Usuarios verificados" 
                Checked="RB2_Checked" Style="{StaticResource boton_menu}"/>

                <RadioButton x:Name ="RB4" Content="Configuracion" 
                 Checked="RB4_Checked" Style="{StaticResource boton_menu}"/>






            </StackPanel>
        </StackPanel>




    </Grid>
</Window>
