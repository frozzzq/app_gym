<Page x:Class="app_gym.Pinicio"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_gym"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Pinicio"
      Background="White">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Border Grid.Column="1" Grid.Row="1" BorderThickness="10" BorderBrush="Gray"
                CornerRadius="10,10,10,10">
            <StackPanel>
                <TextBlock Text="BIENVENIDO AL SISTEMA DE GIMNASIO" FontSize="20" 
        HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1" Grid.Row="1"/>
                <TextBlock Text="numero telefonico: 66811982" VerticalAlignment="Bottom"/>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Envia tu queja: "/>
                    <TextBox x:Name="queja" Width="200" Margin="10,0,0,0" TextChanged="queja_TextChanged"/>
                    <Button x:Name="enviar_queja" Content="ENVIAR" Margin="10,0,0,0" Click="enviar_queja_Click" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Estatus de conexion:" Margin="0,20,0,0"/>
                    <TextBlock x:Name="estado_conexion" Margin="10,20,0,0"/>
                </StackPanel>
                
            </StackPanel>
                
        </Border>
            
            
        
        
    </Grid>
</Page>
