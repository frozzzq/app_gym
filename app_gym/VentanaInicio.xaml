<Window x:Class="app_gym.VentanaInicio"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_gym"
        mc:Ignorable="d"
        Title="VentanaInicio" 
        d:DesignHeight="500" d:DesignWidth="800"
        Background="#C7D9E5">

    <Grid>

        <!-- TARJETA CENTRAL -->
            <Border Name="Card"
                Background="#F4EFEB"
                CornerRadius="25"
                BorderBrush="#577C8E"
                BorderThickness="3"
                Padding="50"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="500">

                <StackPanel HorizontalAlignment="Center">

                    <!-- TÍTULO PRINCIPAL -->
                    <TextBlock Name="TituloText"
                           Text="BYLE"
                           FontSize="72"
                           FontWeight="Bold"
                           Foreground="#314759"
                           HorizontalAlignment="Center"
                           Margin="10"
                           />

                    <!-- SUBTÍTULO -->
                    <TextBlock Name="SubTituloText"
                           Text="Sistema de gestión para gimnasios"
                           FontSize="20"
                           Foreground="#577C8E"
                           HorizontalAlignment="Center"
                           Margin="0,10,0,0"
                           FontWeight="DemiBold"    />

                    <TextBlock Name="SubTitulo2"
                        Text="Gracias por su preferencia!"
                        FontSize="20"
                        Foreground="#577C8E"
                        HorizontalAlignment="Center"
                        Margin="0,10,0,0"/>

            </StackPanel>
            </Border>

        </Grid>
   </Window>

