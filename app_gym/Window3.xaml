<Window x:Class="app_gym.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_gym"
        mc:Ignorable="d"
        Title="Window3" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>


        <Border Grid.Column="1" Grid.Row="1" BorderThickness="7" BorderBrush="Gray"
        CornerRadius="5,5,5,5">

            <StackPanel Margin="10">
                <TextBlock Text="MODIFICAR PLAN" FontSize="20" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Seleccione el plan a modificar:" FontSize="14" Margin="0,20,0,0"/>
                    <ComboBox x:Name="seleccionar_plan" Width="200" Margin="10,20,0,0"
                              DisplayMemberPath="nombre_membresia"
                              SelectedValuePath="id_membresia"
                              SelectionChanged="seleccionarPlanes"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Nombre del plan:" Margin="0,0,10,0"/>
                    <TextBlock x:Name="NP"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Costo del plan:" Margin="0,0,10,0"/>
                    <TextBlock x:Name="CP"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Duracion del plan:" Margin="0,0,10,0"/>
                    <TextBlock x:Name="DP"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="nuevo costo:" Margin="0,30,10,0"/>
                    <TextBox x:Name="nuevo_costo" Width="200" Margin="0,30,0,0"/>
                    <Button x:Name="guardar" Content="GUARDAR CAMBIOS" Click="guardar_Click"/>
                </StackPanel>

            </StackPanel>

        </Border>


    </Grid>
</Window>
