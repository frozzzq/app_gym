<Page x:Class="app_gym.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:app_gym"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Page1"
      Background="White">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Border Grid.Column="2" Grid.Row="1" BorderThickness="10,0,0,0" BorderBrush="DarkSlateBlue"
                >
            <Grid Grid.Row="1" Grid.Column="2" Background="#FFD9E1F1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="50"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="20"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Grid.Column="1" 
            BorderBrush="#FF31487A"
            BorderThickness="5"
            CornerRadius="10"
            Background="#FF8FB3E2">

                    <StackPanel>
                        <TextBlock Text="SENSOR STATUS" FontSize="15" HorizontalAlignment="Center"
                       Background="#FF31487A" Margin="0,0,0,10" Foreground="#FFD9E7EC"/>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Estatus:" FontSize="15" Margin="0,0,100,0"/>
                            <TextBlock x:Name="estatus_sensor" HorizontalAlignment="Right"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="estado" HorizontalAlignment="Left"/>
                        </StackPanel>
                        <Button x:Name="verificar_sensor" Content="VERIFICACION" Click="verificar_sensor_Click"
                                HorizontalAlignment="Center"/>
                        <Button x:Name="volver" Content="REGISTRO" Click="volver_Click" 
                                HorizontalAlignment="Center" Width="80"/>
                        <TextBlock x:Name="verificar" HorizontalAlignment="Center"/>


                    </StackPanel>


                </Border>

            </Grid>

        </Border>
            

            <Grid Grid.Row="1" Grid.Column="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                   Text="REGISTRO DE CLIENTE" 
                   FontSize="20" 
                   HorizontalAlignment="Center" 
                   Margin="0 0 0 20"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nombre:" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="nombre" Width="180" Margin="5"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Apellidos:" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="2" Grid.Column="1" x:Name="ap1" Width="180" Margin="5"/>


            <TextBlock Grid.Row="4" Grid.Column="0" Text="Email:" FontSize="15" VerticalAlignment="Center"/>
            <TextBox Grid.Row="4" Grid.Column="1" x:Name="correo" Width="180" Margin="5"/>

          
            <Button Grid.Row="6" Grid.ColumnSpan="2"
                x:Name="registro"
                Content="Registrar"
                FontSize="16"
                Margin="0 20 0 0"
                HorizontalAlignment="Center"
                Click="registro_Click"/>

            <TextBlock Text="HOLA " FontSize="100"/>


        </Grid>
    </Grid>
</Page>
