<Window x:Class="app_gym.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:app_gym"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="700"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">


    <Border CornerRadius="50"
         BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#F5EFEB" Offset="0"/>
                <GradientStop Color="#C8D9E6" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.BorderBrush>

        <Border.Background>
            <LinearGradientBrush >
                <GradientStop Color="#FFFF" Offset="0"/>
                <GradientStop Color="#A6BED1" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>



        <Grid>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="BYLE" FontSize="100" FontWeight="Bold" FontFamily="Montserrat" Foreground="#2F4156" HorizontalAlignment="Center"/>
                <TextBlock Text="Balance Your Life Easily" FontSize="25" Foreground="#577C8E" Margin="0,-10,0,40" HorizontalAlignment="Center"/>
                <TextBlock Text="¡Bienvenidos!" FontSize="22" FontWeight="SemiBold" Foreground="#F4444444" HorizontalAlignment="Center"/>
                <Button Content="Comenzar" Width="200" Height="65" Background="#577C8E" Foreground="White" 
               FontWeight="Bold" FontSize="20" Margin="0,30,0,0" Click="start_Click"
               Cursor="Hand" BorderThickness="0" />
            </StackPanel>


        </Grid>

    </Border>



</Window>
